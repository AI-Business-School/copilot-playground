{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
      "cpus": 2
  },
  "name": "Copilot Playground by AI Business School",
  "postCreateCommand": "sudo cp --force ./.devcontainer/welcome-message.txt  /usr/local/etc/vscode-dev-containers/first-run-notice.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot",
        "ms-python.python"
      ]
    },
    "codespaces": {
      "repositories": {
        "AI-Business-School/copilot-playground": {
          "permissions": {
            "read": true
          }
        }
      }
    }
  }
}

